<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.itsamatch">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ItsAMatch.NoActionBar">
        <activity android:name=".MainActivity" />
        <activity android:name=".PasswordResetActivity"/>
        <activity android:name=".ui.register.RegisterActivityOne"/>
        <activity android:name=".ui.register.RegisterActivityTwo"/>
        <activity android:name=".ui.register.RegisterActivityThree"/>
        <activity android:name=".ui.register.RegisterActivityFour"/>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>